//! \brief  Linear Interpolation of a two column data txt file
//!
//---------------------------------------------------------------------------//

// Std Lib Includes
#include <iostream>
#include <fstream>

// Boost Lib Inlcludes
#include <boost/array.hpp>

main () {

//float array[44][2];
float x, x_a, x_b, S, S_a, S_b;
double weight;
int N = 44;
int search, idx;
std::string name;
std::ifstream file;// Energy deposited in the chamber
std::cout << "input desired scattering medium (H, He, C, K): ";
std::cin >> name;
name += ".txt";
std::cout << name << std::endl;
file.open(name);

//getline(file,name);
//std::cout << name << std::endl;

x = .11;
search =1;
idx = 0;
while (search == 1) { 
//file >> array[i][0] >> array[i][1];
	x_a = x_b;
	S_a = S_b;	
	file >> x_b >> S_b;
	idx++;
	if ( x <= x_b ) {
		search = 0;
	}
}

std::cout << x_a << " < " << x << " < " << x_b << std::endl;

weight = ( x_b - x )/( x_b - x_a );
S = (1-weight)*S_a + weight*S_b;

std::cout << S_a << " < " << S << " < " << S_b << std::endl;
		
file.close();
}




